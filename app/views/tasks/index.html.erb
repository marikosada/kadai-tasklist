<% if logged_in? %>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1>タスクリスト</h1>
    <table class="table table-striped">
      <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.id, task %> <%= task.content %> : <%= task.status %></td>
      </tr>
      <% end %>
    </table>
    <p><%= link_to 'タスク新規作成', new_task_path, class: "btn btn-primary" %></p>
    
    <% else %>
    <%= render 'sessions/login' %>
  </div>
</div> 
<%end %>
