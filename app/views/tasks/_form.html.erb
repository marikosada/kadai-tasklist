<%= form_for(task) do |f| %>
<% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>
  
  <%= f.label :status, 'ステータス' %>

  <% options = [ "完了", "依頼済", "確認待ち", "決済待ち" ] %>
  <%= f.select :status, options %>

  <%= f.submit %>
<% end %>